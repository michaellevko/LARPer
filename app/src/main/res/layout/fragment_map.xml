
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDarkGreen"
        tools:context="com.example.user.larper.MapFragment">
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp"
        android:layout_toEndOf="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:id="@+id/constraintLayout"
        android:layout_alignBottom="@+id/button2">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Map Fragment"
            android:textColor="@color/colorBrightGreen"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="7dp"
            app:layout_constraintLeft_toRightOf="@+id/button2"
            android:layout_marginLeft="144dp"
            android:layout_marginStart="144dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:text="Load"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="26dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="7dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:layout_above="@+id/textView11"
            android:layout_centerHorizontal="false"
            android:layout_column="2"
            android:layout_marginTop="39dp"
            android:layout_row="1"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@drawable/common_google_signin_btn_icon_dark"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="64dp"
            android:layout_height="49dp"
            android:text="u"
            android:layout_marginRight="82dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="82dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="7dp"
            android:text="r"
            app:layout_constraintLeft_toRightOf="@+id/button3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="12dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save"
            app:layout_constraintLeft_toRightOf="@+id/button2"
            android:layout_marginLeft="11dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="7dp"
            android:layout_marginStart="11dp" />

        <LinearLayout
            android:id="@+id/draw_layout"
            android:layout_width="0dp"
            android:layout_height="256dp"
            android:layout_marginTop="39dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11"></LinearLayout>
    </android.support.constraint.ConstraintLayout>