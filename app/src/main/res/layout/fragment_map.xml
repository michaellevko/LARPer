
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context="com.example.user.larper.MapFragment">
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp"
        android:layout_toEndOf="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:id="@+id/constraintLayout"
        android:layout_alignBottom="@+id/button2">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="144dp"
            android:layout_marginStart="144dp"
            android:layout_marginTop="7dp"
            android:textColor="@color/colorBrightGreen"
            app:layout_constraintLeft_toRightOf="@+id/button2"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:text=""
            android:background="@drawable/load"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="26dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="64dp"
            android:layout_height="49dp"
            android:text=""
            android:background="@drawable/undo"
            android:layout_marginRight="82dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="82dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text=""
            android:background="@drawable/share_icon"
            app:layout_constraintLeft_toRightOf="@+id/button5"
            android:layout_marginLeft="9dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="7dp"
            android:layout_marginStart="9dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/redo"
            android:text=""
            app:layout_constraintLeft_toRightOf="@+id/button3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="12dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_above="@+id/textView11"
            android:layout_centerHorizontal="false"
            android:layout_column="2"
            android:layout_width="0dp"
            android:layout_height="256dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="44dp"
            android:layout_row="1"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            android:layout_marginStart="145dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/button8"
            android:layout_marginLeft="18dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text=""
            android:background="@drawable/save"
            app:layout_constraintLeft_toRightOf="@+id/button2"
            android:layout_marginLeft="11dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="7dp"
            android:layout_marginStart="11dp" />

        <LinearLayout
            android:id="@+id/draw_layout"
            android:layout_width="0dp"
            android:layout_height="256dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="218dp"
            android:layout_marginTop="44dp"
            android:orientation="horizontal"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11">

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>